            .form-group
              label Drivetrain type
                input.form-control(type="text", placeholder="mec, tank, h, 2+2, etc.", name="drivetrain_type")
            .form-group
              label Preferred way to get totes 
              .radio
                label
                  input#optionsRadios1(type='radio', name='pref_tote_getting', value='landfill')
                  |     Landfill
              .radio
                label
                  input#optionsRadios2(type='radio', name='pref_tote_getting', value='feeder')
                  |     Feeder
              .radio
                label
                  input(type='radio', name="pref_tote_getting", value='na', checked='')
                  | N/A
            .checkbox
              label
                input(type="checkbox", name="deposit_totes_step")
                |  Able to deposit totes on step?
            .checkbox
              label
                input(type="checkbox", name="acquire_totes_step")
                |  Able to acquire totes on step?
            .checkbox
              label
                input(type="checkbox", name="acquire_upside_down_totes")
                |  Able to acquire upside down totes?
            .checkbox
              label
                input(type="checkbox", name="mani_upside_down_totes")
                |  Able to manipulate upside down totes?
            .checkbox
              label
                input(type="checkbox", name="acquire_sideways_RC")
                |  Able to acquire sideways RC's?
            .checkbox
              label
                input(type="checkbox", name="score_sideways_RC")
                |  Able to score sideways RC's?
            .checkbox
              label
                input(type="checkbox", name="right_sideways_RC")
                |  Able to right a sideways RC?
            .checkbox
              label
                input(type="checkbox", name="stack_on_robot")
                |  Able to stack on robot?
            .checkbox
              label
                input(type="checkbox", name="internal_stacking")
                |  Internal stacking?
            .checkbox
              label
                input(type="checkbox", name="drive_over_platform")
                |  Able to drive over platform?]
            .checkbox
              label
                input(type='checkbox', name='acquire_totes_step')
                | Able to acquire totes from step?
            .checkbox
              label
                input(type='checkbox', name='acquire_RC_step')
                | Able to acquire RC's from step?
            .form-group
              label Max height for tote stack
                input.form-control(type='number', placeholder='0-6', name='max_tote_height')
            .form-group
              label Max height for RC placement
                input.form-control(type='number', placeholder='0-6', name='max_RC_height')
            br
            button.btn.btn-primary#match_submit Submit
        
